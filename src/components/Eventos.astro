<style>
  .eventos-section h2,
  .eventos-section p,
  .eventos-section a,
  .eventos-section strong,
  .eventos-section span {
    transition: color 0.3s;
    cursor: pointer;
  }
    .eventos-section h2:hover,
    .eventos-section p:hover,
    .eventos-section strong:hover,
    .eventos-section span:hover {
      color: #ffb006;
    }
  
  .eventos-section p {
    transition: color 0.3s, text-shadow 0.3s;
    cursor: pointer;
  }
    /* El hover amarillo no aplica a los botones, solo a los textos */

  .eventos-section {
    max-width: 1200px;
    margin: 10rem auto;
    padding: 3rem 1rem;
    background: #fff7ec;
    border-radius: 28px;
    box-shadow: 0 4px 24px #0002;
    opacity: 0;
    transform: translateY(60px);
    transition: opacity 1.2s, transform 1.2s;
  }
  .eventos-section.visible {
    opacity: 1;
    transform: none;
  }
  .eventos-img {
    width: 100%;
    max-width: 600px;
    min-width: 320px;
    border-radius: 22px;
    box-shadow: 0 6px 32px #0002;
    object-fit: cover;
    aspect-ratio: 16/9;
    transition: transform 0.5s, box-shadow 0.5s;
  }
  .eventos-img:hover {
    transform: perspective(600px) rotateY(8deg) scale(1.04);
    box-shadow: 0 12px 40px #ffb00655;
  }
  .eventos-btn {
    display: inline-block;
    background: #ffb006;
    color: #fff;
    padding: 1.1rem 2.5rem;
    border-radius: 30px;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.1rem;
    border: none;
    box-shadow: 0 2px 12px #ffb00644;
      transition: background 0.8s, transform 0.8s, box-shadow 0.6s;
    margin-right: 1rem;
  }
  .eventos-btn:hover {
    background: #8d5524;
    transform: scale(1.06);
    box-shadow: 0 4px 24px #8d552444;
  }
  @media (max-width: 900px) {
    .eventos-flex {
      flex-direction: column;
      gap: 2rem;
    }
    .eventos-img {
      max-width: 100% !important;
      min-width: 0 !important;
    }
    .eventos-flex > div {
      max-width: 100% !important;
    }
  }
</style>
<section class="eventos-section">
  <h2 style="text-align: center; font-family: 'Abril Fatface', serif; font-size: 2.7rem; margin-bottom: 2.5rem;">
    ¡Aceptamos eventos y catering!
  </h2>
  <div class="eventos-flex" style="display: flex; flex-wrap: wrap; gap: 3rem; align-items: center; justify-content: center;">
  <div style="flex: 1 1 420px; min-width: 320px; max-width: 520px; margin:30px ;">
  <p style="font-size: 1.25rem; color: #444; line-height: 1.8; margin-bottom: 1.5rem;">
        <strong>¿Tienes un cumpleaños, reunión familiar, evento empresarial o cualquier celebración especial?</strong>
      </p>
  <p style="font-size: 1.18rem; color: #444; line-height: 1.8; margin-bottom: 1.5rem;">
        En <strong>Anticuchería Tío Memo</strong> llevamos el sabor del corazón puro a tu evento con nuestro servicio de catering y atención personalizada.
      </p>
  <p style="font-size: 1.18rem; color: #444; line-height: 1.8; margin-bottom: 2.2rem;">
        Nos adaptamos a tus necesidades y hacemos de tu ocasión un momento inolvidable.<br>
        <span style="font-weight: bold; color: #ffb006;">¡Consulta disponibilidad y reserva con nosotros!</span>
      </p>
  <a href="tel:+51999999999" class="eventos-btn" style="margin-right:0;">Consultar ahora</a>
    </div>
    <div style="min-width: 340px; text-align: center;">
      <img src="/img/catering.jpg" alt="Eventos y catering" class="eventos-img">
    </div>
  </div>
  <script>
    window.addEventListener('DOMContentLoaded', () => {
      const section = document.querySelector('.eventos-section');
      if (!section) return;
      const observer = new window.IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          } else {
            entry.target.classList.remove('visible');
          }
        });
      }, { threshold: 0.15 });
      observer.observe(section);
    });
  </script>
</section>